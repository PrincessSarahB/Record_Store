<h1> Inventory </h1>

<table>
  <tr>
    <th>Artist</th>
    <th></th>
    <th>Album</th>
    <th></th>
    <th>Quantity</th>
    <th></th>
    <th>Genre</th>
  </tr>

    <% for artist in @artists %>
    <% artist.albums.each do |album| %>
    <tr>
    <td><%= artist.name %></td>
    <td>|</td>
    <td><%= album.title %></td>
    <td>|</td>
    <td><%= album.quantity %></td>
    <td>|</td>
    <td><%= album.genre %></td>
  </tr>
  <% end %>
  <%end%>
</table>
