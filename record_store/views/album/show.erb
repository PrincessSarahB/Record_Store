

  <div>
    <div class="album_img">
      <img src="https://place.cat/c/100/100" alt="">
    </div>
    <div class="album_info">
    <h2><%= @album.title %></h2>

    <p>Quantity: <%= @album.quantity %></p>
    <p>Genre: <%= @album.genre %></p>
    <p>Artist:  <% @album.artist.each do |artist| %>
      <%= artist.name %>
      <% end %>
    <p> Stock Level: <%=@album.stock_level() %> </p>
    </div>
    <form action="/album/<%=@album.id%>/delete" method="post">
<input type="submit" value="Delete Album">
</form>
<form action="/album/<%=@album.id%>/edit" method="get">
<input type="submit" value="Edit Album">
</form>
  </div>
