
<form action="/album/<%= @album.id%>/edit" method="post">
  <label for="title">Album Title: </label>
  <input type="text" id="title" name="title" value="<%=@album.title%>">

  <label for ="quantity"> Quantity: </label>
  <input type="number" id="quantity" name="quantity" value="<%=@album.quantity%>">

  <label for="genre">Genre: </label>
  <input type="text" id="genre" name="genre" value="<%=@album.genre%>">

  <label for="artist"> Artist: </label>
  <select name="artist_id" id="artist_id" selected="<%= @album.artist_id%>">
    <% @artists.each do |artist| %>
    <% if artist.id == @album.artist_id %>
    <option value=<%=artist.id%> selected><%=artist.name%></option>
    <% else %>
    <option value=<%=artist.id%>><%=artist.name%></option>
    <% end %>
    <% end %>

  </select>

  <label for="buy_price"> Buy Price: </label>
  <input type="text" id="buy_price" name="buy_price" value="<%= "%.2f"% @album.buy_price%>">

  <label for="sell_price"> Sell Price: </label>
  <input type="text" id="sell_price" name="sell_price" value="<%= "%.2f"% @album.sell_price%>">

  <input type="submit" value="Edit stock">

</form>
